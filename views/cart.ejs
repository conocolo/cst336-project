<% include partials/rs_header.ejs %>
<body>
    <main>
        <div class="container">
            <div class="card shopping-cart">
                     <div class="card-header bg-dark text-light">
                         <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                         Galaxy Shopping Cart
                         <a href="/search" class="btn btn-outline-info btn-sm float-right">Back to Catalog</a>
                         <div class="clearfix"></div>
                     </div>
                     <div class="card-body">
                     <% rows.forEach(function(row) { %>
                        <!-- PRODUCT -->
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-2 text-center">
                                    <img class="img-responsive" src="img/<%= row.itemID %>.jpg" width="120" height="80">
                            </div>
                            <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                                <h4 class="product-name"><strong><%= row.itemName %></strong></h4>
                                <h7>
                                    <small><%= row.description1 %></small>
                                </h7>
                            </div>
                            <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                                <div class="col-4 col-sm-4 col-md-7 text-md-right" style="padding-top: 5px">
                                    <h6 id="item-price" style="margin-top: 6px;"><strong>$<%= row.price.toLocaleString("en") %></strong></h6>
                                </div>
                                <div class="col-1 col-sm-4 col-md-4">
                                    <div class="quantity">
                                        <input type="number" step="1" max="99" min="1" value="<%= row.itemQuantity %>" itemID="<%= row.itemID %>" class="itemQuantity"
                                                size="2">
                                    </div>
                                    <br>
                                <div class="col-12 col-sm-1">
                                    <button type="button" class="btn btn-outline-danger btn-xs deleteItem" itemID="<%= row.itemID %>">
                                        <i class="fa fa-trash" aria-hidden="true" itemID="<%= row.itemID %>"></i>
                                    </button>
                                </div>    
                                </div>
                                <div class="col-12">

                                </div>
                            </div>
                        </div>
                        <br>
                     <% }); %>
                             <!-- END PRODUCT -->
                     </div>
                     <div class="card-footer">
                         <div class="float-right" style="margin: 10px">
                             <a href="/checkout" class="btn btn-success float-right">Checkout</a>
                             <div class="float-right" style="margin-right: 20px; margin-top: 5px;">
                                 Subtotal: <b id="subtotal"></b>
                             </div>
                         </div>
                     </div>
                 </div>
         </div>
    </main>
</body>

<% include partials/rs_footer.ejs %>